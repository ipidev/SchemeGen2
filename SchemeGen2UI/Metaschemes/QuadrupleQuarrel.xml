			</MaximumWeaponCount>
			<MinimumSettingValue>
				<Constant value="1" />
			</MinimumSettingValue>
		</WeaponSetting>
		<!-- Select two launched weapon candidates (increases apperance chance) -->
		<WeaponSetting setting="Ammo">
			<InclusionFilter>
				<Category name="Launched" />
			</InclusionFilter>
			<MaximumWeaponCount forceExcessWeaponsToValue="0">
				<Constant value="2" />
			</MaximumWeaponCount>
			<MinimumSettingValue>
				<Constant value="1" />
			</MinimumSettingValue>
		</WeaponSetting>
		<!-- Select three of the previous candidates to be used -->
		<WeaponSetting setting="Ammo">
			<InclusionFilter>
				<Category name="Damaging" />
			</InclusionFilter>
			<MaximumWeaponCount forceExcessWeaponsToValue="0">
				<Constant value="4" />
			</MaximumWeaponCount>
			<MinimumSettingValue>
				<Constant value="1" />
			</MinimumSettingValue>
		</WeaponSetting>

	<Guarantees>
		<!-- Occasionally allow one super weapon candidate -->
		<WeaponSetting setting="Ammo">
			<InclusionFilter matchType="All">
				<Category name="SuperWeapon" />
				<Category name="Damaging" />
			</InclusionFilter>
			<MaximumWeaponCount forceExcessWeaponsToValue="0">
				<CoinFlip headsValue="1" tailsValue="0" headsChance="0.1" />
			</MaximumWeaponCount>
			<MinimumSettingValue>
				<Constant value="1" />
			</MinimumSettingValue>
		</WeaponSetting>
		<!-- Occasionally allow one darksider weapon candidate -->
		<WeaponSetting setting="Ammo">
			<InclusionFilter matchType="All">
				<Category name="Damaging" />
				<Category name="Traversal" />
			</InclusionFilter>
			<MaximumWeaponCount forceExcessWeaponsToValue="0">
				<CoinFlip headsValue="1" tailsValue="0" headsChance="0.25" />
			</MaximumWeaponCount>
			<MinimumSettingValue>
				<Constant value="1" />
			</MinimumSettingValue>
		</WeaponSetting>
		<!-- Select melee weapon candidate -->
		<WeaponSetting setting="Ammo">
			<InclusionFilter>
				<Category name="Melee" />
			</InclusionFilter>
			<MaximumWeaponCount forceExcessWeaponsToValue="0">
				<Constant value="1" />
			</MaximumWeaponCount>
			<MinimumSettingValue>
				<Constant value="1" />
			</MinimumSettingValue>
		</WeaponSetting>
		<!-- Select firearm weapon candidate -->
		<WeaponSetting setting="Ammo">
